{
  "extends": "@allyson/typescript-config/react-library.json",
  "compilerOptions": {
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@allyson/ui/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
